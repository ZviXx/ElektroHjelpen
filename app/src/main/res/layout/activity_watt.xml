<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.flamingo.elektrohjelpen.Watt">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/wattVolt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/wattAmpere"
        android:layout_below="@+id/wattVolt"
        android:layout_alignLeft="@+id/wattVolt"
        android:layout_alignStart="@+id/wattVolt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/wattOhm"
        android:layout_below="@+id/wattAmpere" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wattKalkuler"
        android:id="@+id/wattKalkuler"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volt"
        android:id="@+id/textView22"
        android:layout_alignBaseline="@+id/wattVolt"
        android:layout_alignBottom="@+id/wattVolt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ampere"
        android:id="@+id/textView23"
        android:layout_alignBaseline="@+id/wattAmpere"
        android:layout_alignBottom="@+id/wattAmpere"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ohm"
        android:id="@+id/textView24"
        android:layout_alignBaseline="@+id/wattOhm"
        android:layout_alignBottom="@+id/wattOhm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ampere og Ohm"
        android:id="@+id/radioWatt1"
        android:layout_below="@+id/wattOhm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volt og Ohm"
        android:id="@+id/radioWatt2"
        android:layout_alignBottom="@+id/radioWatt1"
        android:layout_toRightOf="@+id/radioWatt1"
        android:layout_toEndOf="@+id/radioWatt1"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ampere og Volt"
        android:id="@+id/radioWatt3"
        android:layout_alignBottom="@+id/radioWatt2"
        android:layout_toRightOf="@+id/radioWatt2"
        android:layout_toEndOf="@+id/radioWatt2"
        android:checked="false" />
</RelativeLayout>
