<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.flamingo.elektrohjelpen.Ampere">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ampereVolt"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ampereResistans"
        android:layout_below="@+id/ampereVolt"
        android:layout_alignLeft="@+id/ampereVolt"
        android:layout_alignStart="@+id/ampereVolt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ampereWatt"
        android:layout_below="@+id/ampereResistans"
        android:layout_alignLeft="@+id/ampereResistans"
        android:layout_alignStart="@+id/ampereResistans" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kalkuler"
        android:id="@+id/ampereKalkuler"
        android:layout_below="@+id/ampereWatt"
        android:layout_alignLeft="@+id/ampereWatt"
        android:layout_alignStart="@+id/ampereWatt"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volt"
        android:id="@+id/textView13"
        android:layout_alignBaseline="@+id/ampereVolt"
        android:layout_alignBottom="@+id/ampereVolt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ohm"
        android:id="@+id/textView14"
        android:layout_alignBaseline="@+id/ampereResistans"
        android:layout_alignBottom="@+id/ampereResistans"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Watt"
        android:id="@+id/textView15"
        android:layout_alignBaseline="@+id/ampereWatt"
        android:layout_alignBottom="@+id/ampereWatt"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ampereSum"
        android:layout_below="@+id/ampereKalkuler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

</RelativeLayout>
