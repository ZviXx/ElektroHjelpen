<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.flamingo.elektrohjelpen.nyKunde">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registererNavn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/registrerExtraInfo"
        android:layout_alignEnd="@+id/registrerExtraInfo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/registrerEpost"
        android:layout_below="@+id/registererNavn"
        android:layout_alignLeft="@+id/registererNavn"
        android:layout_alignStart="@+id/registererNavn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/registrerTlfNummer"
        android:layout_below="@+id/registrerEpost"
        android:layout_alignLeft="@+id/registrerEpost"
        android:layout_alignStart="@+id/registrerEpost" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/registrerAdresse"
        android:layout_below="@+id/registrerTlfNummer"
        android:layout_alignLeft="@+id/registrerTlfNummer"
        android:layout_alignStart="@+id/registrerTlfNummer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/registrerExtraInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView10"
        android:autoText="false"
        android:linksClickable="true"
        android:maxLines="9" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lagre"
        android:id="@+id/registrerLagre"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Navn"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/registererNavn"
        android:layout_alignBottom="@+id/registererNavn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-post"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/registrerEpost"
        android:layout_alignBottom="@+id/registrerEpost"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefon"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/registrerTlfNummer"
        android:layout_alignBottom="@+id/registrerTlfNummer"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adresse"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/registrerAdresse"
        android:layout_alignBottom="@+id/registrerAdresse"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ekstra informasjon"
        android:id="@+id/textView10"
        android:layout_below="@+id/registrerAdresse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>
